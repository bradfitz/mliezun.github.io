let u = import("../utils.gr")


fn aboutme() {
    return ["div", ["class", "aboutme"], [
        ["p", [], "Hi folks!"],
        ["p", [], "I'm Miguel. Here I write mainly about programming and side projects."],
        ["p", [], [
            "Currently running a side project called ",
            ["a", ["href", "https://cloud-outdated.com", "target", "_blank"], "Cloud Outdated"],
            " with a friend."
        ]]
    ]]
}

fn build_index(posts) {
    return [
        aboutme(),
        [
            "div", [],
            u.foldr(u.map(posts, fn (postDict) {
                let p = postDict["post_obj"]
                let url = postDict["url"]
                return [[
                    "article", [], [
                        # Title and link
                        ["h3", [], [
                            ["a", ["href", url], p.title]
                        ]],
                        # Date
                        ["div", [], postDict["date"]],
                        # Brief description
                        ["div", [], p.excerpt],
                    ]
                ]]
            }), [], u.sum)
        ]
    ]
}
